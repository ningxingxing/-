<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apple.mobileplayer.activity.MainActivity">


    <!--标题栏-->
    <include layout="@layout/titlebar"/>

    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_button_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_video"
            android:text="本地视频"
            android:drawableTop="@drawable/rb_video_drawable_selector"
            style="@style/button_tag_style" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_audio"
            android:text="本地音频"
            android:drawableTop="@drawable/rb_audio_drawable_selector"
            style="@style/button_tag_style" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_net_video"
            android:text="网络视频"
            android:drawableTop="@drawable/rb_net_video_drawable_selector"
            style="@style/button_tag_style" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_net_audio"
            android:text="网络内容"
            android:drawableTop="@drawable/rb_net_audio_drawable_selector"
            style="@style/button_tag_style" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_shopping"
            android:text="商城"
            android:drawableTop="@drawable/rb_net_audio_drawable_selector"
            style="@style/button_tag_style" />
    </RadioGroup>

</LinearLayout>
