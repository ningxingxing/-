<?xml version="1.0" encoding="utf-8"?>
<com.example.apple.mobileplayer.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="25dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:src="@drawable/xingixng" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="@drawable/tv_search_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/tv_search_drawable_left"
        android:drawablePadding="3dp"
        android:text="全网搜索"
        android:textColor="@drawable/tv_search_textcolor_selector"
        android:textSize="15sp" />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_game" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignRight="@+id/tv_game"
            android:background="@drawable/dot" />
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_record"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/nohistorydata" />
</com.example.apple.mobileplayer.view.TitleBar>