<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_video_kind"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/katong" />

        <TextView
            android:id="@+id/tv_video_kind_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="分类"
            android:textColor="#77000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#44000000"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#44000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_ding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ding"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_ding_selector" />


            <TextView
                android:id="@+id/tv_shenhe_ding_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="1"
                android:textColor="#00000000" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#44000000" />

        <LinearLayout
            android:id="@+id/ll_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/iv_cai"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_ding_selector" />


            <TextView
                android:id="@+id/tv_shenhe_cai_bumber"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="2"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:background="#44000000" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/tv_ding_selector" />


            <TextView
                android:id="@+id/tv_shenhe_share_bumber"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="3"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:background="#44000000" />

        <LinearLayout
            android:id="@+id/tv_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="下载(原评论)" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>